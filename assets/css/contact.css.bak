/* Form */
form {
    width: 50%;
    background:#131313;
    border-radius: 17px;
    padding: 20px;
    box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
}

/* Label */
form label {
    display: block;
    text-align: start;
    color: #f2f2f2;
    font-weight: 600;
    font-size: 30px;
}

/* Input */
form .inputfield {
    font-size: 1.1em;
    font-weight: bold;
    display: block;
    height: 44px;
    width: 100%;
    outline: none;
    border-radius: 10px;
    transition: all 1s;
    border: 3px solid rgba(102,51,153,0);
    background: #212121;
    color: white; 
    margin: 1em 0 2em 0;
    padding: 2em;
}


form input[type="text"]:focus, input[type="email"]:focus {
    border: 3px solid white;
}

/* Button */
form .button {
    border: none;
    height: 50px;
    width: 100%;
    border-radius: 0.3em;
    font-size: 25px;
    font-weight: 600;
    /* Colors */
    color: white;
    background:#212121;
    /* To get the hover animation to work */
    transition: transform .5s;
}

form .button:hover {
    transform: scale(1.03);
    cursor: pointer;
    background-color: #f2f2f2;
    color: #212121;
}